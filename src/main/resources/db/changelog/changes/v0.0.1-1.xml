<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet author="Nicholas-Dietz" id="c1">
        <createTable tableName="TASKS">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" unique="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="grouped" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="TASK_EISENHAUER_TYPE_id" type="smallint"/>
            <column name="TASK_IMPACT_id" type="smallint"/>
            <column name="TASK_URGENCY_id" type="smallint"/>
        </createTable>
        <createTable tableName="TASK_EISENHAUER_TYPE">
            <column autoIncrement="true" name="id" type="smallint">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="type" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="TASK_IMPACT">
            <column autoIncrement="true" name="id" type="smallint">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="impact" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createTable tableName="TASK_URGENCY">
            <column autoIncrement="true" name="id" type="smallint">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="urgency" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_task_urgency_tasks"
                baseTableName="TASKS"
                baseColumnNames="TASK_URGENCY_id"
                referencedTableName="TASK_URGENCY"
                referencedColumnNames="id"
        />
        <addForeignKeyConstraint
                constraintName="fk_task_impact_tasks"
                baseTableName="TASKS"
                baseColumnNames="TASK_IMPACT_id"
                referencedTableName="TASK_IMPACT"
                referencedColumnNames="id"
        />
        <addForeignKeyConstraint
                constraintName="fk_task_eisenhauer_type_tasks"
                baseTableName="TASKS"
                baseColumnNames="TASK_EISENHAUER_TYPE_id"
                referencedTableName="TASK_EISENHAUER_TYPE"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>