<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.7"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.7
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.7.xsd">

    <changeSet author="Nicholas-Dietz" id="c1">
        <createTable tableName="TASK_GROUP">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" unique="true"/>
            </column>
            <column name="main" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="subtask" type="bigint">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                constraintName="fk_tasks_task_group_main"
                baseTableName="TASK_GROUP"
                baseColumnNames="main"
                referencedTableName="TASKS"
                referencedColumnNames="id"
        />
        <addForeignKeyConstraint
                constraintName="fk_tasks_task_group_subtask"
                baseTableName="TASK_GROUP"
                baseColumnNames="subtask"
                referencedTableName="TASKS"
                referencedColumnNames="id"
        />
    </changeSet>

</databaseChangeLog>